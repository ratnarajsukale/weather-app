<div class="bg-black">
  <div class="">
    <div class="relative isolate overflow-hidden bg-gray-900 px-6 py-12 shadow-2xl  sm:px-12 xl:py-16">
      <h2 class="mx-auto max-w-2xl text-center text-3xl font-bold tracking-tight text-white sm:text-4xl">Search city name to cheak Weather </h2>
      <p class="mx-auto mt-2 max-w-xl text-center text-lg leading-8 text-gray-300">Example: London, Mumbai, New York</p>
        <%= form_with url: dashboards_path, data: { turbo: false }, html: {class: "mx-auto mt-10 flex max-w-md gap-x-4"} do |form| %>
            <label for="city" class="sr-only">City</label>
            <%= form.text_field :city, placeholder: "City Name", html: {autocomplete: "off"}, class: "min-w-0 flex-auto rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6" %><br>
            <%= form.submit 'Get Weather', data: { turbo: 'false' }, class: "min-w-0 flex-auto rounded-md border-0 bg-blue-600 hover:bg-blue-700 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-white sm:text-sm sm:leading-6" %>
        <% end %>

      <svg viewBox="0 0 1024 1024" class="absolute left-1/2 top-1/2 -z-10 h-[64rem] w-[64rem] -translate-x-1/2" aria-hidden="true">
        <circle cx="512" cy="512" r="512" fill="url(#759c1415-0410-454c-8f7c-9a820de03641)" fill-opacity="0.7" />
        <defs>
          <radialGradient id="759c1415-0410-454c-8f7c-9a820de03641" cx="0" cy="0" r="1" gradientUnits="userSpaceOnUse" gradientTransform="translate(512 512) rotate(90) scale(512)">
            <stop stop-color="#7775D6" />
            <stop offset="1" stop-color="#E935C1" stop-opacity="0" />
          </radialGradient>
        </defs>
      </svg>
    </div>
  </div>
</div>